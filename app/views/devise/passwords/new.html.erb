 <div class="form-gap"></div>
<div class="container">
<div class="row">
<div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
              <div class="panel-body">
                <div class="text-center">
                  <h3><i class="fa fa-lock fa-4x"></i></h3>
                  <h2 class="text-center">Forgot Password?</h2>
                  <p>You can reset your password here.</p>
                  <div class="panel-body">
    
                    
                    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post,:class => 'form-signin',:id => 'register-form' }) do |f| %>
                      <%= devise_error_messages! %>
    
                      <div class="form-group">
                        <div class="input-group">
                          <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                          <%= f.email_field :email, autofocus: true,placeholder: 'email address',class: 'form-control' %>
                        </div>
                      </div>
                      <div class="form-group">
                        <%= f.submit "Reset Password",class: 'btn btn-lg btn-primary btn-block' %>
                       
                      </div>
                      
                      
                      <%=link_to "Register", new_user_registration_path, class: "btn btn-success"%>
                      <%=link_to "Login", new_user_session_path, class: "btn btn-success"%>
                   <% end %>
    
                  </div>
                </div>
              </div>
            </div>
          </div>
</div>
</div>